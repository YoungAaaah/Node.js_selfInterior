<div class="container-fluid">
    <h2 style="margin-left: 17%; margin-top: 3%;"><%=supplierinfo[0].supplier_id%>님 마이페이지</h2>
    <div class="col-md-10 offset-1">
        <a href="/users/supplier_update/<%=supplierinfo[0].supplier_num%>" style="margin-left: 80%"><input type="button" value="업체정보수정" class="btn btn-outline-secondary" ></a>
        <div class="col-md-10 offset-1" style="margin-top: 3%">
                <h4 style="float: right">내 등급 : <%=supplierinfo[0].supplier_class%></h4></br>
                <h4>내 상품 목록</h4></br>
                <div class="row" style="margin-top: 1%;">


                    <%for (let i = 0; i < supplierproduct.length; i++) {%>
                        <div class="col-lg-3 col-md-4 mb-4">
                            <div class="card h-100">
                                <a href="/product/product_detail/<%= supplierproduct[i].product_num %>"><img class="card-img-top" src="../../<%=supplierproduct[i].product_img_path%>"
                                        alt="#"></a>
                                <div class="card-body">
                                    <h4 class="card-title">
                                        <a href="/product/product_detail"><%=supplierproduct[i].product_name%></a>
                                    </h4>
                                    <h5><%=supplierproduct[i].price%>원</h5>
                                </div>
                            </div>
                        </div>
                    <%}%>

                </div>
                <hr>
                <div style="float: right; margin-bottom: 3%">
                    <a href="/users/order_look/<%=supplierinfo[0].supplier_num%>"><button class="btn btn-outline-secondary" type="button">주문목록조회</button></a>
                    <a href="/users/return_look/<%=supplierinfo[0].supplier_num%>"><button class="btn btn-outline-secondary" type="button">반품목록조회</button></a>
                </div>

            </div>
    </div>
</div>